{
  "name": "react-ts-starter",
  "description": "React typescript project starter",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": ">=8.0.x"
  },
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run build || npm run dev",
    "dev": "cross-env NODE_ENV=dev env-cmd .env react-scripts-ts start",
    "build": "cross-env NODE_ENV=prod env-cmd .env react-scripts-ts build",
    "test": "react-scripts-ts test --env=jsdom",
    "test:ci": "cross-env CI=true react-scripts-ts test --env=jsdom",
    "eject": "react-scripts-ts eject",
    "predeploy": "npm run build",
    "deploy": "node deploy.js --netlify",
    "analyze": "source-map-explorer build/static/js/main.*",
    "lint": "cross-env tslint -c tslint.json 'src/**/*.{ts,tsx}'",
    "serve": "npm run build && serve -s build"
  },
  "dependencies": {
    "react": "^16.6.1",
    "react-dom": "^16.6.1",
    "styled-components": "^4.0.3"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.15",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/jest": "^23.3.9",
    "@types/node": "^10.12.3",
    "@types/react": "^16.4.18",
    "@types/react-dom": "^16.0.9",
    "@types/react-test-renderer": "^16.0.3",
    "cross-env": "^5.2.0",
    "env-cmd": "^8.0.2",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "firebase-tools": "^6.0.1",
    "husky": "^1.1.3",
    "if-env": "^1.0.4",
    "lint-staged": "^8.0.4",
    "prettier": "^1.15.1",
    "pretty-quick": "^1.8.0",
    "react-scripts-ts": "^3.1.0",
    "react-test-renderer": "^16.6.1",
    "serve": "^10.0.2",
    "shelljs": "^0.8.2",
    "source-map-explorer": "^1.6.0",
    "stylelint": "^9.7.1",
    "stylelint-no-unsupported-browser-features": "^3.0.2",
    "typescript": "^3.1.6",
    "yargs": "^12.0.3-candidate.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && pretty-quick --staged"
    }
  },
  "stylelint": {
    "plugins": [
      "stylelint-no-unsupported-browser-features"
    ],
    "rules": {
      "plugin/no-unsupported-browser-features": true
    },
    "defaultSeverity": "warning"
  },
  "browserslist": [
    ">0.2%",
    "not ie <= 11",
    "not op_mini all"
  ]
}
